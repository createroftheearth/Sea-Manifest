@model BAL.Models.PortModel
@{
    var states = BAL.Services.MasterConsignmentService.Instance.GetCodesByType("State_Code");
    var CountryCode = BAL.Services.MasterConsignmentService.Instance.GetCountryCodes();
}


@using (Html.BeginForm("AddUpdatePort", "Port", FormMethod.Post, new { @id = "frmPort" }))
{
    <div class="modal-header">
        <h4 class="modal-title">Add/Update Port</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    @Html.HiddenFor(z => z.iPortId)
    <div class="modal-body">
        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sCountryCode)
                @Html.DropDownListFor(z => z.sCountryCode, CountryCode, "Select", new { @class = "form-control", @data_live_search = "true" })
                @Html.ValidationMessageFor(z => z.sCountryCode)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.SstateCode)
                @Html.DropDownListFor(z => z.SstateCode, states, "Select", new { @class = "form-control", @data_live_search = "true" })
                @Html.ValidationMessageFor(z => z.SstateCode)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPortCode)
                @Html.TextBoxFor(z => z.sPortCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.sPortCode)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPortDescription)
                @Html.TextBoxFor(z => z.sPortDescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.sPortDescription)
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Submit</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
    </div>
}

