@model BAL.Models.PersonOnBoardMessageImplementationModel
@{
    var personTypes = SeaManifest.EnumHelper.SelectListFor<BAL.Utilities.EnumConstant.PersonType>();
    var personGender = SeaManifest.EnumHelper.SelectListForByte<BAL.Utilities.EnumConstant.PersonGender>();
    var transitIndicator = SeaManifest.EnumHelper.SelectListForByte<BAL.Utilities.EnumConstant.PersonInTransitIndicator>();
    var crewRanks = BAL.Services.MasterConsignmentService.Instance.GetCodesByType("CRW_RNK");
    var docType = BAL.Services.MasterConsignmentService.Instance.GetCodesByType("PER_ID");
    var CountryCode = BAL.Services.MasterConsignmentService.Instance.GetCountryCodes();
}
@using (Html.BeginForm("AddUpdatePersonOnBoardMessageImplementation", "PersonOnBoardMessageImplementation", FormMethod.Post, new { @id = "frmPersonOnBoardMessageImplementation" }))
{
    <div class="modal-header">
        <h4 class="modal-title">Add/Update Person On Board</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        @Html.HiddenFor(z => z.iMessageImplementationId)
        @Html.HiddenFor(z => z.sReportingEvent)
        @Html.HiddenFor(z => z.iPersonOnBoardId)
        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.dPersonOnBaordSeqNo)
                @Html.TextBoxFor(z => z.dPersonOnBaordSeqNo, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.dPersonOnBaordSeqNo)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPersonDetailsPersonTypeCdd)
                @Html.DropDownListFor(z => z.sPersonDetailsPersonTypeCdd, personTypes, "Select", new { @class = "form-control", @data_live_search = "true" })
                @Html.ValidationMessageFor(z => z.sPersonDetailsPersonTypeCdd)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPersonDetailsPersonFamilyName)
                @Html.TextBoxFor(z => z.sPersonDetailsPersonFamilyName, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.sPersonDetailsPersonFamilyName)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPersonDetailsPersonGivenName)
                @Html.TextBoxFor(z => z.sPersonDetailsPersonGivenName, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.sPersonDetailsPersonGivenName)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPersonDetailsPersonNationalityCdd)
                @Html.DropDownListFor(z => z.sPersonDetailsPersonNationalityCdd, CountryCode, "Select", new { @class = "form-control", @data_live_search = "true" })
                @Html.ValidationMessageFor(z => z.sPersonDetailsPersonNationalityCdd)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.dPersonDetailsPassengersInTransitIndicator)
                @Html.DropDownListFor(z => z.dPersonDetailsPassengersInTransitIndicator, transitIndicator, "Select", new { @class = "form-control", @data_live_search = "true" })
                @Html.ValidationMessageFor(z => z.dPersonDetailsPassengersInTransitIndicator)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPersonDetailsCrewMemberRankOrRatingName)
                @Html.TextBoxFor(z => z.sPersonDetailsCrewMemberRankOrRatingName, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.sPersonDetailsCrewMemberRankOrRatingName)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPersonDetailsCrewMemberRankOrRatingCdd)
                @Html.DropDownListFor(z => z.sPersonDetailsCrewMemberRankOrRatingCdd, crewRanks, "Select", new { @class = "form-control", @data_live_search = "true" })
                @Html.ValidationMessageFor(z => z.sPersonDetailsCrewMemberRankOrRatingCdd)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPersonDetailsPassangerPartOfEmbarkTnCdd)
                @Html.TextBoxFor(z => z.sPersonDetailsPassangerPartOfEmbarkTnCdd, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.sPersonDetailsPassangerPartOfEmbarkTnCdd)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPersonDetailsPassangerPartOfEmbarkTnName)
                @Html.TextBoxFor(z => z.sPersonDetailsPassangerPartOfEmbarkTnName, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.sPersonDetailsPassangerPartOfEmbarkTnName)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPersonDetailsPassangerPartOfDsmbarkTnCdd)
                @Html.TextBoxFor(z => z.sPersonDetailsPassangerPartOfDsmbarkTnCdd, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.sPersonDetailsPassangerPartOfDsmbarkTnCdd)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPersonDetailsPassangerPartOfDsmbarkTnName)
                @Html.TextBoxFor(z => z.sPersonDetailsPassangerPartOfDsmbarkTnName, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.sPersonDetailsPassangerPartOfDsmbarkTnName)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPersonDetailsPersonGenderCdd)
                @Html.DropDownListFor(z => z.sPersonDetailsPersonGenderCdd, personGender, "Select", new { @class = "form-control", @data_live_search = "true" })
                @Html.ValidationMessageFor(z => z.sPersonDetailsPersonGenderCdd)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.dtPersonDetailsPersonDateOfBirth)
                <div class="input-group" id="psdtPersonDetailsPersonDateOfBirth" data-target-input="nearest">
                    @Html.TextBoxFor(z => z.dtPersonDetailsPersonDateOfBirth, new { @class = "form-control datetimepicker-input", @data_target = "#psdtPersonDetailsPersonDateOfBirth" })
                    <div class="input-group-append" data-target="#psdtPersonDetailsPersonDateOfBirth" data-toggle="datetimepicker">
                        <span class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </div>
                </div>
                @Html.ValidationMessageFor(z => z.dtPersonDetailsPersonDateOfBirth)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPersonDetailsPersonPlaceOfBirthName)
                @Html.TextBoxFor(z => z.sPersonDetailsPersonPlaceOfBirthName, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.sPersonDetailsPersonPlaceOfBirthName)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sPersonDetailsPersonCountryOfBirthCdd)
                @Html.DropDownListFor(z => z.sPersonDetailsPersonCountryOfBirthCdd, CountryCode, "Select", new { @class = "form-control", @data_live_search = "true" })
                @Html.ValidationMessageFor(z => z.sPersonDetailsPersonCountryOfBirthCdd)
            </div>
            <div class="form-group col-md-4 hideSEI hideSDN">
                @Html.LabelFor(z => z.dtPersonIdDocExpiryDate)
                <div class="input-group" id="psdtPersonIdDocExpiryDate" data-target-input="nearest">
                    @Html.TextBoxFor(z => z.dtPersonIdDocExpiryDate, new { @class = "form-control datetimepicker-input", @data_target = "#psdtPersonIdDocExpiryDate" })
                    <div class="input-group-append" data-target="#psdtPersonIdDocExpiryDate" data-toggle="datetimepicker">
                        <span class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </div>
                </div>
                @Html.ValidationMessageFor(z => z.dtPersonIdDocExpiryDate)
            </div>
            <div class="form-group col-md-4 hideSEI hideSDN">
                @Html.LabelFor(z => z.sPersonIdOrTravelDocIssuingNationCdd)
                @Html.DropDownListFor(z => z.sPersonIdOrTravelDocIssuingNationCdd, CountryCode, "Select", new { @class = "form-control", @data_live_search = "true" })
                @Html.ValidationMessageFor(z => z.sPersonIdOrTravelDocIssuingNationCdd)
            </div>
            <div class="form-group col-md-4 hideSEI hideSDN">
                @Html.LabelFor(z => z.sPersonIdOrTravelDocNo)
                @Html.TextBoxFor(z => z.sPersonIdOrTravelDocNo, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.sPersonIdOrTravelDocNo)
            </div>
            <div class="form-group col-md-4 hideSEI hideSDN">
                @Html.LabelFor(z => z.sPersonIdOrTravelDocTypeCdd)
                @Html.DropDownListFor(z => z.sPersonIdOrTravelDocTypeCdd, docType, "Select", new { @class = "form-control", @data_live_search = "true" })
                @Html.ValidationMessageFor(z => z.sPersonIdOrTravelDocTypeCdd)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sVisaDetailsPersonVisa)
                @Html.TextBoxFor(z => z.sVisaDetailsPersonVisa, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.sVisaDetailsPersonVisa)
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(z => z.sVisaDetailsPNRNo)
                @Html.TextBoxFor(z => z.sVisaDetailsPNRNo, new { @class = "form-control" })
                @Html.ValidationMessageFor(z => z.sVisaDetailsPNRNo)
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Submit</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
    </div>
}
