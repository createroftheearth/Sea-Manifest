@model BAL.Models.RoleModel
<div class="panel panel-primary">
    <div class="panel-heading">
        Add/Update Banner
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("AddUpdateRole", "Role", FormMethod.Post, new { @id = "frmSaveRole", enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.iRoleId)
            <div class="form-group">

                @Html.Label("Role Name")
                @Html.TextBoxFor(x => x.sRolename, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.sRolename)
            </div>
            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
        }
    </div>
</div>
