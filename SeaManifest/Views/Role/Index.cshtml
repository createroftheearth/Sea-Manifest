<div class="card">
    <div class="card-header">
        <div class="card-title">
            Roles
            <div class="pull-right">
                <button type="button" class="btn btn-success" onclick="AddRole(0)"><i class="fa fa-plus"></i> Add New Role</button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6" id="divAddUpdateRole">
                @{Html.RenderPartial("pvAddUpdateRole", new BAL.Models.RoleModel()); }
            </div>
            <div class="col-md-6">
                <div class="table table-responsive">
                    <table class="table table-bordered" id="tblRole">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>Role Name</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
